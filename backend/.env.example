# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ecrumedia_portal?schema=public"

# JWT
JWT_SECRET="your-secret-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Application
PORT=3000
NODE_ENV="development"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:5173"

# Email Configuration (SMTP)
# For Gmail, use smtp.gmail.com:587 and an app-specific password
# For other providers, adjust accordingly
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-specific-password"
SMTP_FROM="noreply@ecrumedia.com"
